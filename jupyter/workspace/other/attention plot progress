# to do: check pm for py
dt = [("weight", float)]
G = nx.from_numpy_matrix(np.array(noSelfTransitionsMatrixNormalized.round(2).values, dtype=dt), 
                         create_using=nx.MultiDiGraph())

# Because we use numpy, labels need to be reset
label_mapping = dict(list(enumerate(noSelfTransitionsMatrixNormalized.columns)))
G = nx.relabel_nodes(G, label_mapping)


G.edges(data=True)

figure(figsize=(50, 20))

# k controls the distance between the nodes and varies between 0 and 1
# iterations is the number of times simulated annealing is run
# default k=0.1 and iterations=50
pos = nx.spring_layout(G, k=0.7, iterations=150)

nx.draw_networkx_edge_labels(G, pos=pos)
nx.draw(G, pos, with_labels=True, node_size=50000)


